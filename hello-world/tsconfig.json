{
  "include": ["src/**/*", "../patterns/src/components/OpenExternalAppMenu.tsx"],
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "baseUrl": "."
  }
}
